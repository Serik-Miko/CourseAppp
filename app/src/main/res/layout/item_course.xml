<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/course_card_bg"
        android:padding="12dp">

        <!-- Курс суреті -->
        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_gradient"
            android:padding="8dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Курс суреті" />

        <!-- Курс атауы -->
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Курс атауы"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Оқытушы -->
        <TextView
            android:id="@+id/courseInstructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оқытушы"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Рейтинг -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/courseRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.9"
                android:textColor="#FFD700"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/courseReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(148)"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Ұзақтығы -->
        <TextView
            android:id="@+id/courseDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ұзақтығы"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:layout_marginTop="4dp" />

        <!-- Бағасы -->
        <TextView
            android:id="@+id/coursePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 000 ₸"
            android:textColor="#00E0FF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Сатып алу батырмасы -->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Сатып алу"
            android:textColor="#001026"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/btn_neon"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>