<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Жаңа Курс Қосу"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Жаңа Курс Қосу"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Сурет таңдау -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Курс суреті"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivCourseImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/input_bg"
                android:scaleType="centerCrop"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Сурет таңдау"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_outline" />

        </LinearLayout>

        <!-- Курс атауы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Курс атауы*"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="Курс атауын енгізіңіз"
            android:layout_marginBottom="12dp" />

        <!-- Оқытушы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оқытушы*"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etInstructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="Оқытушы аты"
            android:layout_marginBottom="12dp" />

        <!-- Баға -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Баға* (₸)"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="0"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Ұзақтық -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ұзақтық"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="2-3 апта + 1 ай менторлық"
            android:layout_marginBottom="12dp" />

        <!-- Категория -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Сипаттама -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сипаттама"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="Курс сипаттамасы"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="12dp" />

        <!-- Мүмкіндіктер -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мүмкіндіктер (әрбір жолға бір)"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etFeatures"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#88D9FF"
            android:hint="80% практика&#10;Сертификат&#10;Мәңгілік доступ"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="20dp" />

        <!-- PROGRESS BAR ҚОСУ -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Батырмалар -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Бас тарту"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_outline" />

            <Button
                android:id="@+id/btnSaveCourse"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Сақтау"
                android:textColor="#001026"
                android:textStyle="bold"
                android:background="@drawable/btn_neon" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>