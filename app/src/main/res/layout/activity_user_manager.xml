<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Тақырып -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Қолданушыларды Басқару"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Статистика -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTotalUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Барлығы: 0"
            android:textColor="#00E0FF"
            android:textSize="14sp"
            android:background="#2000E0FF"
            android:padding="8dp"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvActiveUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Белсенді: 0"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:background="#204CAF50"
            android:padding="8dp"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvNewUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Жаңа: 0"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:background="#20FF9800"
            android:padding="8dp"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Іздеу -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#88D9FF"
        android:hint="Қолданушы іздеу..."
        android:layout_marginBottom="12dp" />

    <!-- Қолданушылар тізімі -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Қолданушылар тізімі:"
        android:textColor="#00E0FF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- fragment_courses.xml және activity_user_manager.xml қосу -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmptyUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Қолданушылар тізімі бос"
        android:visibility="gone"
        android:textSize="16sp"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Артқа батырмасы -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Артқа"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_outline" />

</LinearLayout>