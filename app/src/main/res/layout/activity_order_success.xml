<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/checkbox_on_background"
        android:tint="#4CAF50"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тапсырыс Сәтті!"
        android:textColor="#4CAF50"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сіздің тапсырысыңыз қабылданды және өңделуде"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnViewOrders"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Тапсырыс тарихын қарау"
        android:textColor="#001026"
        android:textStyle="bold"
        android:background="@drawable/btn_neon"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Басты бетке өту"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_outline"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Бөлісу"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_outline" />

</LinearLayout>